<h2>
  {{title}}
</h2>
<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{collection.firstObject.name}}</h5>
        <p class="card-text">{{comparissonAttr}}:{{comparissonValue1}}</p>
      </div>
    </div>
  </div>

  <div class="col">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{collection.lastObject.name}}</h5>
        <p class="card-text">{{comparissonAttr}} : {{comparissonValue2}}</p>
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col d-flex justify-content-center">
    <button type="button" name="button" class="btn btn-primary" onclick={{action "shuffle"}}>Shuffle</button>
  </div>
</div>
